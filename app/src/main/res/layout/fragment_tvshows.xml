<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fillViewport="true"
    android:background="#121212">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="16dp">

        <!-- Search Box -->
        <EditText
            android:id="@+id/searchBox"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/card_gradient_background"
            android:hint="Search..."
            android:inputType="text"
            android:padding="10dp"
            android:textColor="#FFFFFF"
            android:textSize="16sp"
            tools:ignore="Autofill" />

        <!-- Genre Spinner -->
        <Spinner
            android:id="@+id/genreSpinner"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/black"
            android:padding="8dp" />

        <!-- TV Show Section -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="All New TV Shows Collection"
            android:textSize="20sp"
            android:textColor="#FFFFFF"
            android:textStyle="bold" />

        <!-- First Row: TV Shows A-N -->
        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/recycler_tvshows_an"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:overScrollMode="never" />

        <!-- Second Row: TV Shows M-Z -->
        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/recycler_tvshows_mz"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:overScrollMode="never" />

        <!-- Movies Section -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="All New Movie Collection"
            android:textSize="20sp"
            android:textColor="#FFFFFF"
            android:textStyle="bold" />

        <!-- Third Row: Movies A-N -->
        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/recycler_movies_an"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:overScrollMode="never" />

        <!-- Fourth Row: Movies M-Z -->
        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/recycler_movies_mz"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:overScrollMode="never" />

        <!-- Games Section -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="All New Game Collection"
            android:textSize="20sp"
            android:textColor="#FFFFFF"
            android:textStyle="bold" />

        <!-- Fifth Row: Games -->
        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/recycler_games"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:overScrollMode="never" />

    </LinearLayout>
</ScrollView>
