<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#000000"
    android:backgroundTint="#000000">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@android:color/black"
        android:padding="16dp">

        <!-- Back Button -->

        <!-- Full Poster Image -->

        <ImageView
            android:id="@+id/backButton"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_alignParentStart="true"
            android:background="@drawable/card_gradient_background"
            android:contentDescription="Back"
            android:foregroundTint="#FFFFFF"
            android:padding="8dp"
            android:src="@drawable/back_24" />

        <ImageView
            android:id="@+id/fullPosterImage"
            android:layout_width="match_parent"
            android:layout_height="550dp"
            android:layout_centerHorizontal="true"
            android:contentDescription="Poster Image"
            android:scaleType="centerCrop" />

        <!-- Headline -->
        <TextView
            android:id="@+id/posterHeadline"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/fullPosterImage"
            android:paddingTop="16dp"
            android:text="Headline"
            android:textColor="@android:color/white"
            android:textSize="22sp"
            android:textStyle="bold" />


        <!-- Description -->
        <TextView
            android:id="@+id/posterDescription"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_below="@+id/posterHeadline"
            android:layout_alignParentEnd="true"
            android:layout_alignParentBottom="true"
            android:layout_marginTop="5dp"
            android:paddingTop="12dp"
            android:text="Description..."
            android:textColor="@android:color/white"
            android:textSize="16sp" />
    </RelativeLayout>
</ScrollView>