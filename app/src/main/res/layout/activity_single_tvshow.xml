<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:padding="16dp">

        <WebView
            android:id="@+id/webView_tv"
            android:layout_width="match_parent"
            android:layout_height="275dp"
            android:layout_gravity="center"
            android:layout_marginBottom="16dp" />

        <TextView
            android:id="@+id/singleMovieName_tv"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:fontFamily="@font/inter_24pt_bold"
            android:paddingTop="16dp"
            android:text="Movie Name"
            android:textColor="@color/white"
            android:textSize="28sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/duration_tv"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="TextView"
            android:textColor="#69F0AE"
            android:textSize="15sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/singleMovieDescription_tv"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingTop="8dp"
            android:text="Movie Description"
            android:textColor="#FFFFFF"
            android:textSize="16sp" />

        <TextView
            android:id="@+id/singleMovieRating_tv"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingTop="8dp"
            android:text="IMDB Rating"
            android:textColor="@color/design_default_color_secondary"
            android:textSize="14sp"
            android:textStyle="bold|italic" />

        <TextView
            android:id="@+id/singleMovieRottenTomatoes_tv"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingTop="8dp"
            android:text="Rotten Tomatoes"
            android:textColor="#FF5252"
            android:textSize="14sp"
            android:textStyle="bold|italic" />

        <TextView
            android:id="@+id/usersLove_tv"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingTop="8dp"
            android:text="User's Love"
            android:textColor="#7C4DFF"
            android:textSize="14sp"
            android:textStyle="bold|italic" />

        <TextView
            android:id="@+id/gener_tv"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingTop="8dp"
            android:text="TextView"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/Creator_tv"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingTop="10dp"
            android:text="TextView" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal"
            android:padding="8dp">

            <ImageView
                android:id="@+id/thumbnail_image_tv"
                android:layout_width="190dp"
                android:layout_height="210dp"
                android:layout_weight="1"
                android:contentDescription="TODO"
                android:paddingEnd="8dp"
                android:scaleType="fitCenter" />

            <ImageView
                android:id="@+id/large_icon_tv"
                android:layout_width="match_parent"
                android:layout_height="210dp"
                android:layout_weight="1"
                android:paddingStart="8dp"
                android:scaleType="fitCenter"
                app:srcCompat="@drawable/premiere_wave_studio_inc" />
        </LinearLayout>

        <TextView
            android:id="@+id/textView6"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Get The Download Link"
            android:textColor="#FFFFFF"
            android:textSize="16sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/weblink_tv"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:clickable="true"
            android:focusable="true"
            android:selectable="true"
            android:textColor="#448AFF"
            android:textSize="16sp"
            android:textStyle="italic" />
    </LinearLayout>
</ScrollView>