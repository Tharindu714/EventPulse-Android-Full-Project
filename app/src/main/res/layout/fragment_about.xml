<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="#121212">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:padding="16dp">

        <!-- Developer Image -->
        <ImageView
            android:id="@+id/developer_image"
            android:layout_width="match_parent"
            android:layout_height="180dp"
            android:layout_gravity="center"
            android:background="@drawable/aboutimge"
            android:contentDescription="Developer Image" />

        <!-- About This App -->
        <TextView
            android:id="@+id/app_description"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:lineSpacingExtra="4dp"
            android:paddingStart="10dp"
            android:paddingTop="10dp"
            android:paddingEnd="10dp"
            android:paddingBottom="10dp"
            android:text="@string/About_page"
            android:textSize="16sp" />
        <!-- Developer Info -->
        <TextView
            android:id="@+id/developer_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingTop="20dp"
            android:text="H.P.K Tharindu Chanaka"
            android:textSize="18sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/developer_designation"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingTop="5dp"
            android:text="Founder &amp; Senior Developer of Delta Codex Software Solutions | IoT Innovator"
            android:textSize="16sp" />

        <!-- Website Link -->
        <TextView
            android:id="@+id/developer_website"
            android:layout_width="match_parent"
            android:layout_height="48dp"
            android:clickable="true"
            android:drawableStart="@drawable/ic_website"
            android:drawablePadding="8dp"
            android:gravity="center_vertical"
            android:onClick="openWebsite"
            android:paddingTop="10dp"
            android:text="www.deltacodexsoftwares.com"
            android:textColor="@color/colorAccent"
            android:textSize="20sp" />

        <TextView
            android:id="@+id/developer_email"
            android:layout_width="match_parent"
            android:layout_height="48dp"
            android:clickable="true"
            android:drawableStart="@drawable/ic_email"
            android:drawablePadding="8dp"
            android:gravity="center_vertical"
            android:onClick="sendEmail"
            android:paddingTop="10dp"
            android:text="deltacodexsoftwares@gmail.com"
            android:textColor="@color/colorAccent"
            android:textSize="20sp" />

        <TextView
            android:id="@+id/developer_phone"
            android:layout_width="match_parent"
            android:layout_height="48dp"
            android:clickable="true"
            android:drawableStart="@drawable/ic_call"
            android:drawablePadding="8dp"
            android:gravity="center_vertical"
            android:onClick="dialPhoneNumber"
            android:paddingTop="10dp"
            android:text="Contact Me"
            android:textColor="@color/colorAccent"
            android:textSize="20sp" />

        <TextView
            android:id="@+id/developer_sms"
            android:layout_width="match_parent"
            android:layout_height="48dp"
            android:clickable="true"
            android:drawableStart="@drawable/ic_message"
            android:drawablePadding="8dp"
            android:gravity="center_vertical"
            android:onClick="sendSMS"
            android:paddingTop="10dp"
            android:text="Message Me"
            android:textColor="@color/colorAccent"
            android:textSize="20sp" />

        <!-- WebView for Website -->
        <WebView
            android:id="@+id/webView"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginTop="20dp"
            android:visibility="gone" />
    </LinearLayout>

</ScrollView>
